<div class="assignment center small">

<h2>Assignments</h2>

<%= button_to "New assignment", new_assignment_path, method: "get", class: "btn btn-warning" %> <br>

<table>

	<% @assignments.each do |f| %>
	
		<tr>
	    	<td>
	      		<%= link_to f.title, "#{f.url}", :target => "_blank" %>
	      	</td>
	      	<td>
	      		<%= button_to "Submit", new_lab_path, :method => "get", :class => "btn btn-default" %>
			</td>
	      	<td>
	      		<%= button_to "Edit", edit_assignment_path(f), :method => "get", :class => "btn btn-default" %>
			</td>
    	</tr>
 
	<% end %>

</table><br>

</div>