<div class="resource center small">

<h2>Edit Resource</h2>

<%= form_for @resource, class: "form-group" do |f| %>

    <label>Title</label> <br>
    <%= f.text_field :title, class: "form-control" %> <br><br>

    <label>Link</label>  <br>
    <%= f.text_field :url, class: "form-control" %> <br><br>

    <label>Description</label>  <br>
    <%= f.text_area :description, class: "form-control" %> <br><br>

    <%= f.submit "Save changes", :class => "btn btn-default" %>

<% end %>

<%= button_to "Delete resource", resource_path(@resource), :method => "delete", :class => "btn btn-default" %>

</div>