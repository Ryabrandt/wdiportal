<div class="user center small">

<h2><%= @user.firstname %> <%= @user.lastname %></h2>

<%= @user.email %> <br><br>

<a href="/users/sign_out"><button class="btn btn-default">Sign Out</button></a>

<% unless current_user.role == "coordinator" %>

<h3>Events</h3>

<% @user.events.each do |event| %>
	<%= link_to event.title, events_path %> <br>
<% end %>

<h3>Projects</h3>

<% @user.projects.each do |project| %>
	<%= link_to project.title, projects_path %> <br>
<% end %>

<h3>Gists</h3>

<% @user.gists.each do |gist| %>
	<%= link_to gist.title, gists_path %> <br>
<% end %>

<h3>Resources</h3>

<% @user.resources.each do |resource| %>
	<%= link_to resource.title, resources_path %> <br>
<% end %>

<h3>Labs</h3>

<% @user.labs.each do |lab| %>
	<%= link_to lab.assignment.title, assignments_path %> <br>
<% end %>

<h3>Squad</h3>

<% if current_user.role == "student" %>

<%= @instructor %>

<% else %>

<% @students.each do |student| %>
	<%= student.firstname %><%= student.firstname %> <br>
<% end %>

<% end %>

</div>

<% end %>

<script>

var divwidth = $( "table" ).width();

$(document).ready(function(){
	if divwidth < 300 {
    	$( "div.user" ).css({width: divwidth});
	};
})

</script>