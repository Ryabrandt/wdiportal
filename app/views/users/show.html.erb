</Canvas>

		<% if @user.projects.empty? %>
			<p>No projects! <a href="/projects/new">Add a projects</a></p>
		<% end %>

		<% @user.projects.each do |project| %>
			<%= link_to project.title, projects_path %> <br>
		<% end %>

	<% end %>

	<h3>Events</h3>

	<% if @user.events.empty? %>
		<p>No events! <a href="/events">Check for events</a></p>
	<% end %>

	<% @user.events.each do |event| %>
		<%= link_to event.title, events_path %> <br>
	<% end %>

	<h3>Squad</h3>

	<% if @user.squad.nil? %>

		<p>You have not been assigned to a squad yet</p>

	<% else %>

		<% if current_user.role == "student" %>

			<%= @instructor %>

		<% else %>

			<% if @students.nil? %>
				<p>No students</p>
			<% else %>
				<% @students.each do |student| %>
					<%= student.firstname %> <%= student.lastname %> <br>
				<% end %>
			<% end %>
			
		<% end %>

	<% end %>

	</div>

<% end %>

<script>

var divwidth = $( "table" ).width();

$(document).ready(function(){
	if divwidth < 300 {
    	$( "div.user" ).css({width: divwidth});
	};
})

</script>