<div class="signup center small">

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-group") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :firstname, "First name" %><br />
  <%= f.text_field :firstname, :autofocus => true, class: "form-control", placeholder: "Brian" %></div> <br>

  <div><%= f.label :lastname, "Last name" %><br />
  <%= f.text_field :lastname, class: "form-control", placeholder: "Wong" %></div> <br>

  <div><%= f.label :githubhandle, "Github Handle" %><br />
  <%= f.text_field :githubhandle, :class => "form-control", placeholder: "gagithan" %></div> <br>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control", placeholder: "name@ga.co" %></div> <br>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div> <br>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control" %></div> <br>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div> <br>
<% end %>

<%= render "devise/shared/links" %>

</div>